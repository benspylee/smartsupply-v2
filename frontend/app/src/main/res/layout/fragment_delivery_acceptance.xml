<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".activity.ui.order.OrderDetailsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Delivery Address:"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:id="@+id/deliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:textAlignment="center"
                android:text="Delivery Address:"
                android:textStyle="bold"
                android:gravity="center_horizontal">

            </TextView>

            <TextView
                android:text="PickUp Address:"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:id="@+id/pickupAddress"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:textAlignment="center"

                android:text="Delivery Address:"
                android:textStyle="bold"
                android:gravity="center_horizontal">

            </TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"></TextView>

                <TextView
                    android:id="@+id/tottiemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:textStyle="bold"
                    android:text="Delivery"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:text="Customer Mob"></TextView>

                <TextView
                    android:id="@+id/txtdelverycharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:textStyle="bold"
                    android:text=" Charges"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:text="Total Amount "
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/totcartamt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text=" Charges"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/deliactions"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/rejectdeliv"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:background="@color/btn_login_bg"
                android:text="reject Delivery">


            </Button>

            <Button
                android:id="@+id/acceptdeliv"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@color/btn_login_bg"
                android:text="Accept Delivery">

            </Button>
        </LinearLayout>

    </LinearLayout>



</FrameLayout>